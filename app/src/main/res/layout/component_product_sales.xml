<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productSellerComponent"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/bg_product_seller">

    <LinearLayout
        android:id="@+id/timeAndID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Product Name -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:14 PM"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"/>

        <!-- Product Price -->
        <TextView
            android:id="@+id/salesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S4L3S1D"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/productSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P960.00"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/timeAndID"
        app:layout_constraintHorizontal_bias="0.96"/>

</androidx.constraintlayout.widget.ConstraintLayout>