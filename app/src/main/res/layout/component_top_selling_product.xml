<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topSellingProductComponent"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="3dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_product_seller">

    <androidx.cardview.widget.CardView
        android:id="@+id/topProductCard"
        android:layout_width="138dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/topProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/img_placeholder"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/topProductName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/topProductCard"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/productPercentage"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-6dp"
        android:fontFamily="@font/inter_regular"
        android:rotation="-32.73"
        android:text="35% of the sales for the last 7 days"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/ribbonText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ribbonText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-28dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/inter_bold"
        android:rotation="-32.73"
        android:text="TOP SELLING"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:background="@drawable/bg_ribbon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>