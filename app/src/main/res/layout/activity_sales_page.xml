<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salesPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".SalesPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_marginBottom="-24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/navbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/dateTimeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="TextView"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/inter_regular"/>

                <TextView
                    android:id="@+id/userTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review your sales"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"/>

                <LinearLayout
                    android:id="@+id/categorySlider"
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_time_filter">

                    <Button
                        android:id="@+id/todayButton"
                        android:text="Today"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/pastWeekButton"
                        android:text="Past week"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/pastMonthButton"
                        android:text="Past month"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/allTimeButton"
                        android:text="All time"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="7dp"
                        style="?android:attr/buttonBarButtonStyle"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/productText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time and ID"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/salesTotalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Total"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/productSalesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/navbar"
            layout="@layout/component_navigation_bar"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>